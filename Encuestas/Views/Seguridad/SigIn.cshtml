@model Encuestas.Models.UsuarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Login de Acceso</title>
</head>
<body>
    <br />
    <div class="container"> 
        <div class="row">
            <br />
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            SigIn
                        </div>
                    </div>
                    <div class="card-body">
                        @using (@Html.BeginForm("SigIn", "Seguridad"))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu Nombre de Usuario", id = "email", required = "required" })
                                @Html.ValidationMessageFor(model => model.email, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(model => model.contrasenia, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu Password", id = "contrasenia", required = "required" })
                                @Html.ValidationMessageFor(model => model.contrasenia, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessage("error_login", new { @class = "text-danger" })
                                <a href="@Url.Action("Register", "Seguridad")" class="btn btn-sm btn-link">Si no tienes cuenta, Registrate aquí</a>
                                <input type="submit" class="btn btn-sm btn-success float-right" value="Register" />
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessage("error_login", new { @class = "text-danger" })
                                <h5> Si ya tiene una cuenta, favor de llenar su perfil</h5>
                                <a href="@Url.Action("Registrar", "Perfiles")" class="btn btn-sm btn-link">Llenar formulario</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
