@model Encuestas.Models.UsuarioViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Registro de Usuarios</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <br />
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            Registro del usuario
                        </div>
                    </div>
                    <div class="card-body">
                        @using (@Html.BeginForm("Register", "Seguridad", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu Nombre de Usuario", id = "email", required = "required" })
                                @Html.ValidationMessageFor(model => model.email, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(model => model.contrasenia, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu Password", id = "contrasenia", required = "required" })
                                @Html.ValidationMessageFor(model => model.contrasenia, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownList("IdRol", null, new { @class = "dorm-control input-sm" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessage("error_registro", new { @class = "text-danger" })
                                <input type="submit" class="btn btn-sm btn-success float-right" value="Login" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
