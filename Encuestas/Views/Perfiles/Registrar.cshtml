@model Encuestas.Models.PerfilesViewModel
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <title>Registro de Usuarios</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <br />
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            Registro del perfil
                        </div>
                    </div>
                    <div class="card-body">
                        @using (@Html.BeginForm("Registrar", "Perfiles", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu Nombre", id = "Nombre", required = "required" })
                                @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu apellido paterno", id = "ApellidoPaterno", required = "required" })
                                @Html.ValidationMessageFor(model => model.ApellidoPaterno, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu apellido materno", id = "ApellidoMaterno", required = "required" })
                                @Html.ValidationMessageFor(model => model.ApellidoMaterno, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Edad, new { @class = "form-control input-group-sm", placeholder = "Ingresa tu edad", id = "Edad", required = "required" })
                                @Html.ValidationMessageFor(model => model.Edad, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.FechaNacimiento, "{0:dd/MM/yyyy}", new { @class = "form-control input-group-sm", placeholder = "Fecha de nacimiento día-mes-año", id = "FechaNacimiento", required = "required" })
                                @Html.ValidationMessageFor(model => model.FechaNacimiento, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Foto, new { @class = "col-md-2 control-label", required = "required" })
                                <div class="col-md-10">
                                    <input type="file" name="Foto" id="File" accept=".png,.jpg,.jpeg" />
                                </div>
                                @Html.ValidationMessageFor(model => model.Foto, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownList("IdUser", null, new { @class = "dorm-control input-sm" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessage("error_registro", new { @class = "text-danger" })
                                <input type="submit" class="btn btn-sm btn-success float-right" value="Register" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

